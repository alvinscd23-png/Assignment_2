<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="#F3F4F6"
    tools:context=".MainActivity"
    android:layout_marginTop="20dp">

    <!-- Title -->

    <!-- Menu Card -->

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="📃 User Form"
        android:textColor="#111827"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/menuCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@android:color/darker_gray"
            android:showDividers="middle">

            <!-- Pizza Row -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter user name"
                android:minHeight="48dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Email"
                android:minHeight="48dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="🏓 Hobbies"
                android:textColor="#111827"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp">

                <CheckBox
                    android:id="@+id/checkBoxOption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📔 Reading"
                    android:textSize="18sp"
                    android:textColor="#374151" />
            </LinearLayout>

            <!-- Complan Row -->

            <!-- Weed Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp">

                <CheckBox
                    android:id="@+id/checkBoxOption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚽ Sports"
                    android:textColor="#374151"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp">

                <CheckBox
                    android:id="@+id/checkBoxOption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎵 Music"
                    android:textSize="18sp"
                    android:textColor="#374151" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="💑 Gender"
                android:textColor="#111827"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            <RadioGroup
                android:id="@+id/Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleTextView">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🚺 Women"
                    android:textSize="18sp"
                    android:textColor="#374151" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🚹 Men"
                    android:textSize="18sp"
                    android:textColor="#374151" />

            </RadioGroup>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Results -->
    <Button
        android:id="@+id/resultsButton"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Show Results"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2563EB"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/menuCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Final Result -->
    <TextView
        android:id="@+id/final_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:background="#ECFDF5"
        android:text="Name: Alvin\n Email: alvinst2005@gmail.com\n Gender: Male\n Hobbies: Sports"
        android:textSize="18sp"
        android:textColor="#065F46"
        android:fontFamily="sans-serif"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/resultsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Total -->


    <!-- Place Order Button -->

</androidx.constraintlayout.widget.ConstraintLayout>
